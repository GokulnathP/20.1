          <form class="form-inline my-2 my-lg-0">
            <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
          </form>
        </div>
        </div>
      </nav>
    <div class="container">
        <h1 class="text-center mt-3">20.1 Newsletter</h1>
        <div class="row mt-5">
                  <% if (posts.length == 0) { %>
                    <div class="card mx-auto text-center" style="background-color:#1a1a1a;color:white;">
                      <img src="https://s3.amazonaws.com/libapps/accounts/2079/images/error_icon_400.png" alt="error" class="mx-auto" style="width:50%;">
                      <p>No posts still</p>
                    </div>
                  <% } else { %>
                    <% posts.forEach((post)=>{ %>
                      <div class="col-lg-3 col-sm-12 mt-3">
                        <div class="card" style="background-color:#1a1a1a;color:white;">
                          <img class="opening" src=" <%= post.img_url %>" class="card-img-top" alt="...">
                          <div class="card-body">
                            <p> <%= post.header %> </p>
                          </div>
                        </div>
                      </div>
                    <% }) %>
                  <% }%>
        </div>
        <div class="row mt-5 mb-5">
            <div class="col-lg-9">
                <div class="row card mx-2 mt-3" style="background-color:#1a1a1a;color:white;">
                    <div class="row card-body">
                        <div class="col-lg-3 col-sm-12">
                            <img class=""src="https://resources.pulse.icc-cricket.com/ICC/photo/2019/08/04/48581f98-d0f4-40f5-a73a-40e3d5178a90/GettyImages-1159285351.jpg" alt="" style="width:100%;">
